<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/navcolor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/quantum_launchscreen_calendar</item>
        <item name="colorControlActivated">@color/colorAccent</item>


    </style>
    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#464646</item>
    </style>
    <style name="NewFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/googlesansmed</item>
    </style>
    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/selectday</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#3C1A73E8</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
